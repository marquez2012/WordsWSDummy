        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WordDayWs</servlet-name>
        <url-pattern>/word</url-pattern>
    </servlet-mapping>
</web-app>